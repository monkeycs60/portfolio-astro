---
import Layout from '../layouts/Layout.astro';

const currentlyBuilding = [
  "Intelligent matching system for Affilae's marketplace",
  "Recall People — launching on App Store soon"
];

const work = [
  {
    name: "Affilae",
    role: "Fullstack Developer & AI Consultant",
    period: "Feb 2024 → Present",
    description: "Leading affiliate marketing platform in France (20K+ publishers). Rebuilt dashboard & reporting from scratch. Developed mobile app features. Currently building an intelligent matching system for the marketplace. Introduced AI tools company-wide and building internal RAG documentation system.",
    url: "https://affilae.com",
    tags: ["React", "React Native", "Node.js", "AI Training", "RAG"],
    badge: "Full-time",
    badgeColor: "bg-blue-500/20 text-blue-400"
  },
  {
    name: "Recall People",
    role: "Founder",
    year: "2026",
    description: "Personal CRM with voice-to-contact cards. AI-powered summaries, auto-organization, smart search, and event reminders.",
    url: "https://recall-people-2026.vercel.app",
    tags: ["React Native", "Expo", "Deepgram", "Cloudflare Workers", "AI"],
    badge: "Founder",
    badgeColor: "bg-green-500/20 text-green-400"
  },
  {
    name: "CardioWatch",
    role: "Founder",
    year: "2025",
    description: "Medical literature monitoring for cardiologists. 2900+ articles with AI-powered summaries and auto-generated podcasts.",
    url: "https://mediceye-web.vercel.app",
    tags: ["Next.js", "TypeScript", "AI Summaries", "TTS"],
    badge: "Founder",
    badgeColor: "bg-green-500/20 text-green-400"
  },
  {
    name: "Larib Portal",
    role: "Lead Developer",
    year: "2025",
    description: "Multi-app portal for cardiology lab management. Includes scheduling, administration tools, and training platform for medical students.",
    url: "https://www.cardiolarib-portal.com",
    tags: ["Next.js", "TypeScript", "Auth", "Multi-tenant"],
    badge: "Freelance",
    badgeColor: "bg-amber-500/20 text-amber-400"
  },
  {
    name: "Coworker Malin",
    role: "Founder",
    year: "2024",
    description: "Community platform to discover and share free coworking spots. AI moderation for chat and content validation.",
    url: "https://www.coworkermalin.com",
    tags: ["Next.js", "Node.js", "PostgreSQL", "AI Moderation"],
    badge: "Founder",
    badgeColor: "bg-green-500/20 text-green-400"
  }
];

const hotTakes = [
  { name: "Claude Code", take: "I monitor my Claude usage more than my girlfriend's texts." },
  { name: "n8n", take: "Spent last year building automations to save time. Still can't find the time to sleep." },
  { name: "Next.js", take: "The framework that makes you feel like a beta tester. Because you are." },
  { name: "Tailwind CSS", take: "AI killed 75% of Tailwind's workforce. Counting on the survivors to keep shipping." },
  { name: "Zustand", take: "State management that doesn't make me question my career choices." },
  { name: "MongoDB", take: "Cool for a side project." },
  { name: "Hono", take: "Express is for people who still use var." },
  { name: "OpenClaw", take: "Gave it my SOUL and root access. What could go wrong?" },
  { name: "Cursor", take: "Cancelled. Replaced by Notepad++." },
  { name: "TypeScript", take: "My vibe coding has to be typesafe. Trust issues." },
  { name: "React Native", take: "I choose good DX over good UX. My users will understand. Hopefully." }
];

const links = [
  { name: "GitHub", url: "https://github.com/monkeycs60", icon: "github" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/clement-serizay", icon: "linkedin" },
  { name: "Twitter", url: "https://twitter.com/clementserizay", icon: "twitter" }
];
---

<Layout>
  <div class="max-w-2xl mx-auto px-6 py-16 md:py-24">
    
    <!-- Hero -->
    <header class="mb-16">
      <!-- Photo -->
      <div class="mb-6">
        <img 
          src="/photo.png" 
          alt="Clément Serizay" 
          class="w-20 h-20 rounded-full object-cover border-2 border-neutral-700"
        />
      </div>
      
      <h1 class="text-4xl md:text-5xl font-bold mb-2">
        <span class="text-purple-400">Clément</span> Serizay
      </h1>
      <p class="text-xl text-neutral-400 mb-1">AI-Augmented Fullstack Dev</p>
      <p class="text-sm text-neutral-500 mb-6">Bordeaux, France</p>
      
      <p class="text-neutral-300 mb-8 leading-relaxed">
        I build AI-powered apps and workflows that make teams faster and smarter.
      </p>
      
      <!-- Social Links with Icons + Names -->
      <div class="flex flex-wrap gap-4">
        <a 
          href="https://github.com/monkeycs60"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-neutral-400 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          <span class="text-sm">GitHub</span>
        </a>
        <a 
          href="https://www.linkedin.com/in/clement-serizay"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-neutral-400 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          <span class="text-sm">LinkedIn</span>
        </a>
        <a 
          href="https://twitter.com/clementserizay"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-neutral-400 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          <span class="text-sm">Twitter</span>
        </a>
      </div>
    </header>

    <!-- Currently Building -->
    <section class="mb-16 p-4 bg-neutral-900/50 border border-neutral-800 rounded-lg">
      <h2 class="text-sm font-medium text-purple-400 mb-3 flex items-center gap-2">
        <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
        Currently building
      </h2>
      <ul class="space-y-1">
        {currentlyBuilding.map(item => (
          <li class="text-neutral-400 text-sm flex items-center gap-2">
            <span class="text-purple-400">→</span> {item}
          </li>
        ))}
      </ul>
    </section>

    <!-- Navigation -->
    <nav class="mb-16 text-sm text-neutral-500 flex gap-6">
      <a href="#work" class="hover:text-white transition-colors">Work</a>
      <span>/</span>
      <a href="#takes" class="hover:text-white transition-colors">Hot takes</a>
      <span>/</span>
      <a href="#contact" class="hover:text-white transition-colors">Contact</a>
    </nav>

    <!-- Work -->
    <section id="work" class="mb-20">
      <h2 class="text-2xl font-semibold text-purple-400 mb-8">Work</h2>
      
      <div class="space-y-10">
        {work.map(item => (
          <article class="group">
            <div class="flex items-start justify-between mb-1">
              <a 
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-lg font-medium text-white hover:text-purple-400 transition-colors"
              >
                {item.name}
                <span class="inline-block ml-1 opacity-0 group-hover:opacity-100 transition-opacity">↗</span>
              </a>
              <span class={`text-xs px-2 py-1 rounded-full ${item.badgeColor}`}>
                {item.badge}
              </span>
            </div>
            <p class="text-sm text-neutral-500 mb-2">
              {item.role}
              {item.period && <span class="text-neutral-600"> · {item.period}</span>}
              {item.year && <span class="text-neutral-600"> · {item.year}</span>}
            </p>
            <p class="text-neutral-400 mb-3">{item.description}</p>
            <div class="flex flex-wrap gap-2">
              {item.tags.map(tag => (
                <span class="text-xs text-neutral-500 bg-neutral-800/50 px-2 py-1 rounded">
                  {tag}
                </span>
              ))}
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Hot Takes -->
    <section id="takes" class="mb-20">
      <h2 class="text-2xl font-semibold text-purple-400 mb-8">Hot takes</h2>
      
      <div class="space-y-5">
        {hotTakes.map(tech => (
          <div>
            <span class="text-white font-medium">{tech.name}</span>
            <p class="text-neutral-500 italic mt-0.5">{tech.take}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="mb-16">
      <h2 class="text-2xl font-semibold text-purple-400 mb-4">Get in touch</h2>
      <a 
        href="mailto:clement.serizay@gmail.com"
        class="text-white hover:text-purple-400 underline underline-offset-4 transition-colors"
      >
        clement.serizay@gmail.com
      </a>
    </section>

    <!-- Footer -->
    <footer class="pt-8 border-t border-neutral-800 text-sm text-neutral-600 flex justify-between items-center">
      <p>© 2026 Clément Serizay</p>
      <div class="flex gap-4">
        <a 
          href="/CV.pdf"
          target="_blank"
          class="text-neutral-500 hover:text-neutral-300 transition-colors"
        >
          CV
        </a>
        <a 
          href="mailto:clement.serizay@gmail.com"
          class="text-neutral-500 hover:text-neutral-300 transition-colors"
        >
          clement.serizay@gmail.com
        </a>
      </div>
    </footer>

  </div>
</Layout>
